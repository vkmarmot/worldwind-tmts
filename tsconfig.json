{
    "compilerOptions": {
        "baseUrl": "./src",
        "outDir": "./dist/",
        "sourceMap": true,
        "strictNullChecks": true,
        "noImplicitAny": true,
        "module": "commonjs",
        "target": "es5",
        "jsx": "react",
        "allowJs": true,
        "typeRoots": [
            "./@types"
        ]
    },
    "include": [
        "./src/**/*.ts",
        "./src/**/*.d.ts",
        "./@types/**/*.d.ts"
    ]
}
